@page
@model ShelterRazor.Pages.DeletePetModel
@{
    <style>
        .margin {
            margin-top: 6%;
            text-align: center;
        }
        p{
            font-size: 18px;
        }
    </style>
    <div class="shadow p-3 mb-5 bg-white rounded margin">
        <h1 class="title">Delete @Model.Pet.Name</h1>
        <p>Pet Id: @Model.Pet.Id</p>
        <p>Pet Age: @Model.Pet.Age</p>
        <p>Pet Breed: @Model.Pet.Breed</p>

        @if(Model.Pet.OwnerAddress != null)
        {
            <p>Owner Name: @Model.Pet.OwnerName @Model.Pet.OwnerSurName</p>
            <p>Owner Address: @Model.Pet.OwnerAddress</p>
        }

        <p>Are you sure you want do delete this pet?</p>

        <form method="post">
            <button type="submit" class="btn btn-success">Yes</button>
            <a class="btn btn-danger" asp-page="/Index">No</a>
        </form>
    </div>
}
