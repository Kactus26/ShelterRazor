@page "{id}"
@model ShelterRazor.Pages.SheltersModel
@{
    <style>
        img{
            width: 300px;
            height: 300px;
        }
    </style>
    <body>
        <h1 style="margin-top: 5%; margin-bottom: 2%; text-align: center">Shelters</h1>
        <div class="d-flex flex-lg-wrap justify-content-around flex-wrap">
            @foreach (var item in Model.PetShelters)
            {
                var imagesPath = $"{item.ImgSrc}";

                <div class="card-group">
                    <div class="card">
                        <img class="card-img-top img-param" src="@imagesPath" alt="Pet image">
                        <div class="card-body">
                            <h2 style="text-align: center" class="card-title a-center">@item.Address</h2>
                        </div>
                        <div class="d-flex justify-content-around" style="margin-bottom: 3%">
                            <a asp-page="/Index" asp-route-filter="@item.Address" class="btn btn-success">Pets in shelter</a>
                            <a asp-page="/DeletePet" asp-route-id="@item.Id" class="btn btn-primary">Products</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </body>
}
