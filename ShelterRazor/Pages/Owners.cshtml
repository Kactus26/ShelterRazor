@page
@model ShelterRazor.Pages.OwnersModel
@{
    <style>
        .tittle{
            margin-top: 70px;
            margin-bottom: 15px;
            text-align: center;
        }
        span{
            font-size: 18px;
        }
        .pets{
            margin-left:2%;
        }
        .test{
            align-items: center;
        }
    </style>
    <h1 class="tittle">Owners</h1>
    <div class="flex-lg-wrap flex-wrap d-flex" style="margin-left: -3%;">
        @foreach (var item in Model.Owners)
        {
            <div class="card-group" style="width:20%; margin-left:3%;">
                <div class="card">
                    <div class="card-body">
                        <div style="height: 83%;">
                            <span>@item.Name @item.SurName</span><br/>
                            <span>Address: @item.Address</span><br />
                            <span>Pets:</span>
                            <div class="pets">
                                @foreach(var item2 in item.Pets)
                                {
                                    <span>@item2.Name -</span>
                                    <span>@item2.Breed</span>
                                    <br />
                                }
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a asp-page="/Owners" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        <br />
        }
    </div>
}
